
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is logged in
    function isAdmin() {
      return request.auth != null;
    }

    // --- PUBLIC CONTENT (Read: Everyone, Write: Admin) ---
    
    // Global Settings (Theme, SEO, Contact Info)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Rooms
    match /rooms/{room} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Amenities (Services)
    match /amenities/{amenity} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery
    match /gallery/{card} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- BOOKINGS (Create: Everyone, Read/Write: Admin) ---
    match /bookings/{booking} {
      // Anyone can submit a booking request form (public write)
      allow create: if true;
      
      // Only admin can list (read), update, or delete bookings
      allow read, update, delete: if isAdmin();
    }
  }
}